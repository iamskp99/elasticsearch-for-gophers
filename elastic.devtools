PUT movies
{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 0
    },
    "mappings": {
        "properties": {
            "Title": {
                "type": "text",
                "fields": {
                  "en": {
                    "type": "text",
                    "analyzer": "english"
                  },
                  "es": {
                    "type": "text",
                    "analyzer": "spanish"
                  },
                  "pt": {
                    "type": "text",
                    "analyzer": "portuguese"
                  }
                }
            },
            "Year": {
                "type": "long"
            },
            "RunningTime": {
                "type": "long"
            },
            "ReleaseDate": {
                "type": "date",
                "ignore_malformed": true
            },
            "Rating": {
                "type": "double"
            },
            "Actors": {
                "type": "text",
                "fields": {
                  "en": {
                    "type": "text",
                    "analyzer": "english"
                  },
                  "es": {
                    "type": "text",
                    "analyzer": "spanish"
                  },
                  "pt": {
                    "type": "text",
                    "analyzer": "portuguese"
                  }
                }
            },
            "Directors": {
                "type": "text",
                "fields": {
                  "en": {
                    "type": "text",
                    "analyzer": "english"
                  },
                  "es": {
                    "type": "text",
                    "analyzer": "spanish"
                  },
                  "pt": {
                    "type": "text",
                    "analyzer": "portuguese"
                  }
                }
            },
            "Genres": {
                "type": "text",
                "fields": {
                    "keyword": {
                        "type": "keyword",
                        "ignore_above": 256
                    }
                }
            }
        }
    }
}

